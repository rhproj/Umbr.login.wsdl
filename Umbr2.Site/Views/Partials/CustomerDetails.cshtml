@using Umbr2.Site.Controllers;
@using Umbr2.Site.Services;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

<div class="text-center mt-5">
    <h1 class="text-success">Welcome! @CustomerAccountService.Customer.LastName @CustomerAccountService.Customer.FirstName</h1>
</div>
<div class="container d-flex align-items-center justify-content-center">

<div class="col-lg-9 m-5">
    <table class="table table-success table-striped">
        <thead class="table-dark">
            <tr>
                <th class="text-center w-10" scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th class="text-center" >1</th>
                <td>First Name</td>
                <td>@CustomerAccountService.Customer.FirstName</td>
            </tr>
            <tr>
                <th class="text-center" >2</th>
                <td>Last Name</td>
                <td>@CustomerAccountService.Customer.LastName</td>
            </tr>

            <tr>
                <th class="text-center w-auto" >3</th>
                <td>Mobile</td>
                <td>@CustomerAccountService.Customer.Mobile</td>
            </tr>
            <tr>
                <th class="text-center w-auto">4</th>
                <td>Email</td>
                <td>@CustomerAccountService.Customer.Email</td>
            </tr>
            <tr>
                <th class="text-center w-auto" >5</th>
                <td>Company</td>
                <td>@CustomerAccountService.Customer.Company</td>
            </tr>
            <tr>
                <th class="text-center w-auto">6</th>
                <td>Address</td>
                <td>@CustomerAccountService.Customer.Address</td>
            </tr>
            <tr>
                <th class="text-center w-auto">7</th>
                <td>City</td>
                <td>@CustomerAccountService.Customer.City</td>
            </tr>
            <tr>
                <th class="text-center w-auto" >8</th>
                <td>Country</td>
                <td>@CustomerAccountService.Customer.Country</td>
            </tr>
            <tr>
                <th class="text-center w-auto">9</th>
                <td>Zip</td>
                <td>@CustomerAccountService.Customer.Zip</td>
            </tr>
            <tr>
                <th class="text-center w-auto">10</th>
                <td>Phone</td>
                <td>@CustomerAccountService.Customer.Phone</td>
            </tr>

            <tr>
                <th class="text-center w-auto" >11</th>
                <td>Email Confirmed?</td>
                @if (CustomerAccountService.Customer.EmailConfirm == 0)
                {
                    <td>No</td>
                }
                else
                {
                    <td>Yes</td>
                }
            </tr>
            <tr>
                <th class="text-center w-auto" >12</th>
                <td>Mobile Confirmed?</td>
                @if (CustomerAccountService.Customer.MobileConfirm == 0)
                {
                    <td>No</td>
                }
                else
                {
                    <td>Yes</td>
                }
            </tr>
        </tbody>
    </table>
    @using (Html.BeginUmbracoForm<WSDLServiceController>("HandleLogout"))
    {
            <div class="d-grid col-2 mx-auto mt-4">
                <button type="submit" class="btn btn-outline-secondary">Logout</button>
        </div>
    }
</div>
</div>